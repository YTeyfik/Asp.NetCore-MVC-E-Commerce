@model Product
<div class="card mb-2" >
    <img src="~/images/@Model.ImageUrl" class="card-img-top" style="height:16rem;" alt="...">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <small>
            <i class="fa-solid fa-turkish-lira-sign"></i>@Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        @*asp tagleri*@
        <a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-sm btn-outline-info">Details</a>
        <a asp-controller="Shop" asp-action="addtocart" asp-route-url="@Model.Url" class="btn btn-sm btn-outline-success">Add to Cart</a>
    </div>
</div>