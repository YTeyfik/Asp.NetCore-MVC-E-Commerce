@model List<Category>
<div class="my-5">
    <div class="list-group">
        <a href="/products" class="list-group-item list-group-item-action bg-dark text-white">Kategoriler</a>
        @foreach(var item in Model)
        {
            <a asp-controller="Shop"
            asp-action="List" 
            asp-route-category="@item.Url"
            class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url?"active":"")">
                @item.Name
            </a>
        }
    </div>
</div>
